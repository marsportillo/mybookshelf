<div class="row">
    <div class="col-md-8" style="padding-left:0px">
        <img src="images/home_background.jpg" class="w-100 vh-100" style="object-fit: cover; padding-left:0px">
    </div>
    <div class="col-md-4" style="padding-top: 10%;">
        <div class="row">
            <div class="col-md-10 offset-md-1" >
                <h2>Sign in</h2>
                <form method="POST" action="/login">
                <div class="form-group" style="padding-top: 30px;">
                    <input name="email" type="email" class="form-control" id="inputEmail" placeholder="email" value="">
                </div>
                <div class="form-group" style="padding-top: 30px">
                    <input name="password" type="password"  class="form-control" id="inputPassword" placeholder="password" value="">
                </div>
                <div class="row" style="padding-top: 10px;">
                    <div class="col-md-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
                            <label class="form-check-label" for="flexCheckChecked">
                                Remember me
                            </label>    
                        </div>
                    </div>
                    <div class="col-md-6">
                        <p>Forgot your password?</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 offset-md-1" style="padding-top: 10px;">
                <button type="submit" class="btn btn-block mybookshelf-login-button">Login</button>
            </div>
        </div>
        </form>
        <div class="row" style="padding-top: 20px;">
            <div class="col-md-10 offset-md-1" >
                Not register yet? <b>Create an account</b>
            </div>
        </div>
    </div>

</div>
