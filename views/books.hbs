{{> navbar }}
<div class="row">
    <div class="col">
        <div class="row" style="padding-top: 5%">
            <div class="col-md-2 offset-9 ">
                <a href="/books/addBook"><button type="button" class="btn  mybookshelf-button">Add book</button></a>
            </div>
        </div>
        <div class="row">
            <div class="col-10 offset-1">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Author</th>
                            <th scope="col">Pages</th>
                            <th scope="col">Status</th>
                            <th scope="col">Detail</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each books}}
                        <tr>
                            <td>{{this.title}}</td>
                            <td>{{this.author}}</td>
                            <td>{{this.pages}}</td>
                            <td>
                                {{#switch this.status}} 
                                    {{#case '0'}} <span class="badge bg-pill bg-secondary">Not Started</span> {{/case}} 
                                    {{#case '1'}} <span class="badge bg-pill bg-primary">In progress</span> {{/case}} 
                                    {{#case '2'}} <span class="badge bg-pill bg-danger">Blocked</span> {{/case}} 
                                    {{#case '3'}} <span class="badge bg-pill bg-success">Finished</span> {{/case}} 
                                {{/switch}}
                            </td>
                            <td><a href="/books/{{this._id}}"><button type="button" class="btn btn-link">Go</button></a></td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
