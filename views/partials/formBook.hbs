<div class="form-group row">
    <label for="title" class="col-4 col-form-label">Titolo</label> 
    <div class="col-8">
        <input id="title" name="title" type="text" value="{{book.title}}" required="required" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="author" class="col-4 col-form-label">Autore</label> 
    <div class="col-8">
        <input id="author" name="author" type="text" value="{{book.author}}" required="required" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="year" class="col-4 col-form-label">Anno</label> 
    <div class="col-8">
        <input id="year" name="year" value="{{book.year}}" type="text" required="required" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="pages" class="col-4 col-form-label">Pagine</label> 
    <div class="col-6">
        <input id="pages" name="pages" type="text" value="{{book.pages}}" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="currentPage" class="col-4 col-form-label">Pagina corrente</label> 
    <div class="col-6">
        <input id="currentPage" name="currentPage" value="{{book.currentPage}}" type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="startedAt" class="col-4 col-form-label">Data inizio</label> 
    <div class="col-8">
        <input id="startedAt" name="startedAt" value="{{moment book.startedAt format="DD/MM/YYYY"}}" type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="endedAt" class="col-4 col-form-label">Data fine</label> 
    <div class="col-8">
        <input id="endedAt" name="endedAt" value="{{moment book.endedAt format="DD/MM/YYYY"}}" type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="status">Stato lettura</label>
    <select class="form-control" name="status" id="status">
        <optgroup label="Selected">
            {{#switch book.status}} 
                {{#case '0'}} <option value="0" selected>Non ancora iniziato</option> {{/case}} 
                {{#case '1'}} <option value="1" selected>In corso</option> {{/case}} 
                {{#case '2'}} <option value="2" selected>Lettura bloccata</option> {{/case}} 
                {{#case '3'}} <option value="3" selected>Finito!</option> {{/case}} 
            {{/switch}}
        </optgroup>
        <optgroup label="Statuses">
            <option value="0">Non ancora iniziato</option>
            <option value="1">In corso</option>
            <option value="2">Lettura bloccata</option>
            <option value="3">Finito!</option>
        </optgroup>
    </select>
</div>

<div class="form-group row">
    <label for="status">Voto</label>
    <select class="form-control" name="rating" id="rating">
        <optgroup label="Voto dato">
            <option value="{{book.rating}}" selected>{{book.rating}}</option> 
        </optgroup>
        <optgroup label="Voti">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </optgroup>
    </select>
</div>