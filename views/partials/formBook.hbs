<div class="form-group row">
    <label for="title" class="col-4 col-form-label">Title</label> 
    <div class="col-8">
        <input id="title" name="title" type="text" value="{{book.title}}" required="required" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="author" class="col-4 col-form-label">Author</label> 
    <div class="col-8">
        <input id="author" name="author" type="text" value="{{book.author}}" required="required" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="year" class="col-4 col-form-label">Year</label> 
    <div class="col-8">
        <input id="year" name="year" value="{{book.year}}" type="text" required="required" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="pages" class="col-4 col-form-label">Pages</label> 
    <div class="col-6">
        <input id="pages" name="pages" type="text" value="{{book.pages}}" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="currentPage" class="col-4 col-form-label">Current Pages</label> 
    <div class="col-6">
        <input id="currentPage" name="currentPage" value="{{book.currentPage}}" type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="startedAt" class="col-4 col-form-label">Start Date</label> 
    <div class="col-8">
        <input id="startedAt" name="startedAt" value="{{moment book.startedAt format="DD/MM/YYYY"}}" type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="endedAt" class="col-4 col-form-label">End Date</label> 
    <div class="col-8">
        <input id="endedAt" name="endedAt" value="{{moment book.endedAt format="DD/MM/YYYY"}}" type="text" class="form-control">
    </div>
</div>
<div class="form-group row">
    <label for="status">Status</label>
    <select class="form-control" name="status" id="status">
        <optgroup label="Selected">
            {{#switch book.status}} 
                {{#case '0'}} <option value="0" selected>Not Started</option> {{/case}} 
                {{#case '1'}} <option value="1" selected>In progress</option> {{/case}} 
                {{#case '2'}} <option value="2" selected>Blocked</option> {{/case}} 
                {{#case '3'}} <option value="3" selected>Finished</option> {{/case}} 
            {{/switch}}
        </optgroup>
        <optgroup label="Statuses">
            <option value="0">Not Started</option>
            <option value="1">In progress</option>
            <option value="2">Blocked</option>
            <option value="3">Finished</option>
        </optgroup>
    </select>
</div>